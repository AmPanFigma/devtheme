<section class="pups-attitude">
    <div class="bg-image">
        <img src="{{ section.settings.background_image | img_url: 'master' }}" alt="Background Image">
    </div>
    <div class="pa-in">
        <div class="container-fluid">
            <div class="pain-data">
                <div class="paind-subhead">
                    <p>{{ section.settings.subheading }}</p>
                </div>
                <div class="paind-heading">
                    <h2>{{ section.settings.heading }}</h2>
                </div>
                <div class="paind-button">
                    <a href="{{ section.settings.button_link }}" class="custom-button white">{{ section.settings.button_text }}</a>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Pups Attitude Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading Text",
        "default": "Bring Out Their Inner Personality"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading Text",
        "default": "Every Pup Deserves a Look That Fits"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link",
        "default": "/collections/all"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Shop All"
      }
    ],
    "blocks": [],
    "presets": [
      {
        "name": "Pups Attitude Section",
        "category": "Custom Sections"
      }
    ]
}
{% endschema %}
  