<section class="our-categories">
    <div class="container-fluid">
        <div class="heading center with-pill">
            <div class="pillwrap">
                <div class="heading-pill yellow">Our Categories</div>
            </div>
            <h3>{{ section.settings.heading }}</h3>
        </div>
        <div class="categories-grid-wrap">
            <div class="category-grid">
                {% for block in section.blocks %}
                <div class="cgrid-item">
                    <a href="{{ block.settings.category_link }}">
                        <div class="cgriditem-in">
                            <div class="cgi-image">
                                <img src="{{ block.settings.category_image | img_url: 'master' }}" alt="{{ block.settings.category_name }}">
                            </div>
                            <div class="cgi-content">
                                <div class="category-name">
                                    {{ block.settings.category_name }}
                                </div>
                                <div class="category-arrow">
                                    <svg width="26" height="26" viewBox="0 0 26 26" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M13.3992 25.4214C6.53916 25.4214 0.978027 19.8603 0.978027 13.0002C0.978027 6.14024 6.53916 0.579102 13.3992 0.579102C20.2592 0.579102 25.8203 6.14024 25.8203 13.0002C25.8203 19.8603 20.2592 25.4214 13.3992 25.4214Z" fill="#FCDB00"/>
                                        <path d="M13.3987 8.03125L18.3672 12.9997L13.3987 17.9682" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
                                        <path d="M8.43027 13H18.3672" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Our Categories",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Weâ€™ve Got Your Pup Covered!"
      }
    ],
    "blocks": [
      {
        "type": "category",
        "name": "Category",
        "settings": [
          {
            "type": "image_picker",
            "id": "category_image",
            "label": "Category Image"
          },
          {
            "type": "text",
            "id": "category_name",
            "label": "Category Name",
            "default": "Harnesses"
          },
          {
            "type": "text",
            "id": "category_link",
            "label": "Category Link",
            "default": "#"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Our Categories",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}