<section class="padding">
    <div class="lr-sec">
        <div class="lrsec left">
            <div class="lr-image">
                <img src="{{ section.settings.left_image | img_url: 'master' }}" alt="Left Image">
            </div>
            <div class="lr-text">
                <div class="lrtext-heading">
                    <h3>{{ section.settings.left_heading }} <span>{{ section.settings.left_span }}</span></h3>
                </div>
                <div class="lrtext-para">
                    <p>{{ section.settings.left_paragraph }}</p>
                </div>
            </div>
        </div>
        <div class="lrsec right">
            <div class="lr-image">
                <img src="{{ section.settings.right_image | img_url: 'master' }}" alt="Right Image">
            </div>
            <div class="lr-text">
                <div class="lrtext-heading">
                    <h3>{{ section.settings.right_heading }} <span>{{ section.settings.right_span }}</span></h3>
                </div>
                <div class="lrtext-para">
                    <p>{{ section.settings.right_paragraph }}</p>
                </div>
            </div>
        </div>
    </div>
</section>


