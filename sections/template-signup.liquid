<section class="login-signup-template padding">
    <div class="log-form-wrap">
        <div class="container">
            <div class="log-form-in">
                <div class="log-form-con">
                    <div class="head">
                        <h3 class="big">{{ section.settings.head }}</h3>
                    </div>
                    <div class="log-form">
                        {% form 'create_customer' %}
                        {% if form.errors %}
                        {{ form.errors | default_errors }}
                        {% endif %}
                        <div class="form-con-wrap">
                            <div class="form-con">
                                <label for="full-name">Full name*
                                </label>
                                <input type="text" name="customer[first_name]" placeholder="Enter your full name"
                                    id="full-name" required />
                            </div>
                            <div class="form-con">
                                <label for="email">Email<sup>*</sup>
                                </label>
                                <input type="email" name="customer[email]" placeholder="Enter your email address" id="email"
                                    required autocomplete=false />
                            </div>
                            <div class="form-con">
                                <label for="password">Password<sup>*</sup>
                                </label>
                                <input type="password" name="customer[password]" id="password" placeholder="Enter Password"
                                    required autocomplete="off" />
                            </div>
                        </div>
                        <div class="form-con checkbox">
                            <input type="checkbox" name="customer[accepts_terms_conditions]" id="accepts_terms_conditions"
                                required>
                            <label for="accepts_terms_conditions">I agree with the 
                                <a href="{{ section.settings.link }}">Terms & Conditions</a>
                            </label>
                        </div>
                        <div class="form-con submit-but">
                            <button type="submit" class="custom-button black">sign up</button>
                        </div>
                        {% endform %}
                        <div class="cc-signup">
                            Already have an account? {{ 'Login' | customer_login_link }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="log-img">
        <img src="{{ section.settings.bg-img |  img_url: 'master' }}" alt="">
    </div>
</section>
  
  <script>
    $(document).ready(function(){
        $(".forgot-password").click(function(){
            $(".forget").addClass('active');
            $(".log-form-con").addClass('hide');
        });
    });
  </script>
  
  {% schema %}
    {
      "name": "SignUp",
      "settings": [
        {
          "type": "text",
          "id": "head",
          "label": "Heading",
          "default": "Get Started Now"
        }, 
        {
          "type": "text",
          "id": "sub-head",
          "label": "Sub Heading",
        },
        {
          "type": "image_picker",
          "id": "bg-img",
          "label": "Image"
        }, {
          "type": "url",
          "id": "link",
          "label": "Select terms and condition"
        }, 
        {
          "type": "text",
          "id": "fp-head",
          "label": "Forget Password Heading",
          "default": "Forgot Password"
        }
      ]
    }
  {% endschema %}