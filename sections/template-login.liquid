<section class="login-signup-template padding">
    <div class="log-form-wrap">
      <div class="container">
        <div class="log-form-in">
          <div class="log-form-con">
            <div class="head">
              <h3 class="big">{{ section.settings.head }}</h3>
            </div>
            <div class="log-form">
              {% form 'customer_login' %}
                {% if form.errors %}
                  {{ form.errors | default_errors }}
                {% endif %}
                <div class="form-con-wrap">
                  <div class="form-con">
                    <label for="email">Email Address<sup>*</sup>
                    </label>
                    <input
                      type="email"
                      name="customer[email]"
                      placeholder="Enter your email address"
                      id="email"
                      required
                      autocomplete="false">
                  </div>
                  <div class="form-con">
                    <div class="password-con">
                      <label for="password">Password<sup>*</sup>
                      </label>
                      <input
                        type="password"
                        name="customer[password]"
                        id="password"
                        placeholder="Enter Password"
                        required
                        autocomplete="off">
                    </div>
                    <div class="password-con2">
                      
                        <a href="javascript:void(0)" class="forgot-password">Forgot Password?</a>
                    </div>
                  </div>
                </div>
                <div class="form-con checkbox">
                  <input
                    type="checkbox"
                    name="customer[accepts_terms_conditions]"
                    id="accepts_terms_conditions"
                    required>
                  <label for="accepts_terms_conditions">I agree with the 
                    <a href="{{ section.settings.link }}">Terms & Conditions</a>
                  </label>
                </div>
                <div class="form-con submit-but">
                  <button type="submit" class="custom-button black">
                    <span class="cta-dot"></span>
                    <div class="cta-text">login</div>
                  </button>
                </div>
              {% endform %}
              <div class="cc-signup">Don't have an account? {{ 'Sign Up' | customer_register_link }}</div>
            </div>
          </div>
          <div class="log-form-con forget">
            <div class="head">
              <h3 class="big">{{ section.settings['fp-head'] }}</h3>
              <div class="lumi-desc">
                <p>Don’t worry! Enter your email and we’ll send you a link to reset your password.</p>
              </div>
            </div>
            <div class="log-form">
              {% form 'recover_customer_password' %}
                {% if form.errors %}
                  {{ form.errors | default_errors }}
                {% endif %}
                <div class="form-con-wrap">
                  <div class="form-con">
                    <label for="email">EMAIL ADDRESS<sup>*</sup>
                    </label>
                    <input
                      type="email"
                      name="email"
                      placeholder="Enter your email address"
                      id="email"
                      required
                      autocomplete="false">
                  </div>
                </div>
                <div class="form-con submit-but">
                  <button type="submit" class="custom-button dark">send reset link</button>
                </div>
              {% endform %}
              <div class="cc-signup">
                {{ 'Back to Login' | customer_login_link }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="log-img">
      {% if section.settings['bg-img'] != blank %}
        <img src="{{ section.settings['bg-img'] | img_url: 'master' }}" alt="">
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  </section>
  
  <script>
      $(document).ready(function () {
        $('.forgot-password').click(function () {
          $('.forget').addClass('active');
          $('.log-form-con').addClass('hide');
        });
      });
  </script>
  
  {% schema %}
    {
      "name": "Login",
      "settings": [
        {
          "type": "text",
          "id": "head",
          "label": "Heading",
          "default": "Login to your acocunt"
        },
        {
          "type": "image_picker",
          "id": "bg-img",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "T&C"
        }, {
          "type": "text",
          "id": "fp-head",
          "label": "Forget Password Heading",
          "default": "Forgot Password"
        }
      ]
    }
  {% endschema %}