<section class="our-story">
    <div class="container-fluid">
        <div class="heading center with-pill">
            <div class="pillwrap">
                <div class="heading-pill yellow">{{ section.settings.heading_tag }}</div>
            </div>
            <h3>{{ section.settings.heading }}</h3>
            <p class="heading-desc">{{ section.settings.description }}</p>
        </div>
    </div>
    <div class="os-slides">
        <div class="splide">
            <div class="splide__track">
                <ul class="splide__list">
                    {% for block in section.blocks %}
                    <li class="splide__slide">
                        {% if block.settings.image %}
                        <img src="{{ block.settings.image | img_url: 'large' }}" alt="{{ block.settings.alt_text }}">
                        {% endif %}
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function () {
    const splide = new Splide('.splide', {
        type: 'loop',
        drag: 'free',
        focus: 'center',
        perPage: 2.5,
        autoStart: 'true',
        gap: 18,
        autoScroll: {
            speed: 2,
            
        },
    });

    splide.mount();
});

</script>

{% schema %}
{
  "name": "About Story",
  "settings": [
    {
        "type": "text",
        "id": "heading_tag",
        "label": "Heading Tag",
    },
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
    },
    {
        "type": "text",
        "id": "description",
        "label": "Heading Description",
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Splide Slider",
      "category": "Sliders"
    }
  ]
}
{% endschema %}