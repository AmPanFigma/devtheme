<section class="error-page margin-banner">
    <div class="page-bg-image">
        <img src="{{ section.settings.background_image | img_url: 'master' }}" alt="Background Image">
    </div>
    <div class="error-page-cont-wrap">
        <div class="error-page-text">
            <h1>{{ section.settings.heading }}</h1>
            <h3>{{ section.settings.error_subheading }}</h3>
            <p>{{ section.settings.error_message }}</p>
        </div>
        <div class="error-page-cta">
            <a class="custom-button dark" href="{{ section.settings.button_link }}">{{ section.settings.button_text
                }}</a>
        </div>
    </div>
</section>
  
  {% schema %}
  {
    "name": "Error Page",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "404"
      },
      {
        "type": "text",
        "id": "error_subheading",
        "label": "Sub Heading",
        "default": "Requested Page not found"
      },
      {
        "type": "text",
        "id": "error_message",
        "label": "Error Message",
        "default": "Lorem ipsum dolor sit amet consectetur. Aenean vulputate in pharetra netus scelerisque duis elementum. "
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Return to homepage"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link",
        "info": "Select a page to link to"
      }
    ],
    "presets": [
      {
        "name": "Error Page",
        "category": "404"
      }
    ]
  }
  {% endschema %}
  